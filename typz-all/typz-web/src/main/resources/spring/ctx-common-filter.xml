<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="compositeFilter" class="com.izhbg.typz.base.servlet.CompositeFilter">
		<property name="filters">
			<list>
			    <ref bean="beforeInvocationFilter"/>
			    <ref bean="springSessionFilter"/>
				<ref bean="springSecurityFilterChainProxy"/>
				<!-- <ref bean="servletFilter"/>-->
			</list>
		</property>
	</bean>

	<bean id="beforeInvocationFilter" class="com.izhbg.typz.base.servlet.BeforeInvocationFilter">
		<property name="filters">
			<list>
			    <ref bean="staticContentFilterStatic"/>
				<ref bean="characterEncodingFilter"/>
			</list>
		</property>
	</bean>


	<bean id="staticContentFilterStatic" class="com.izhbg.typz.base.servlet.ProxyFilter">
		<property name="name" value="staticContent"/>
		<property name="filter">
			<bean class="com.izhbg.typz.base.servlet.StaticContentFilter"/>
		</property>
		<property name="urlPattern" value="/s/*"/>
	</bean>




	<bean id="springSessionFilter" class="com.izhbg.typz.base.servlet.ProxyFilter">
		<property name="name" value="springSession"/>
		<property name="filter">
			<bean class="org.springframework.session.web.http.SessionRepositoryFilter">
				<constructor-arg>
					<bean class="org.springframework.session.MapSessionRepository"/>
				</constructor-arg>
			</bean>
		</property>
	</bean>

	<bean id="characterEncodingFilter" class="com.izhbg.typz.base.servlet.ProxyFilter">
		<property name="name" value="encode"/>
		<property name="filter">
			<bean class="org.springframework.web.filter.CharacterEncodingFilter">
				<property name="encoding" value="UTF-8"/>
				<property name="forceEncoding" value="true"/>
			</bean>
		</property>
	</bean>


	<bean id="springSecurityFilterChainProxy" class="com.izhbg.typz.base.servlet.ProxyFilter">
		<property name="name" value="security"/>
		<property name="filter" ref="springSecurityFilterChain"/>
	</bean>




	<!-- ====================================================================== -->

	<bean id="servletFilter" class="com.izhbg.typz.base.servlet.ServletFilter">
		<property name="name" value="servlet"/>
		<property name="servletMap">
			<map>
				<entry key="*.do">
					<ref bean="springmvc"/>
				</entry>
			</map>
		</property>
	</bean>


	<bean id="springmvc" class="com.izhbg.typz.base.servlet.ProxyServlet">
		<constructor-arg index="0" value="springmvc"/>
		<constructor-arg index="1">
			<bean class="org.springframework.web.servlet.DispatcherServlet"/>
		</constructor-arg>
	</bean>

</beans>
